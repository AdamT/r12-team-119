= form_for(Group.new) do |f|
  label
    ' Event Being Planned
    br
    = f.text_field :title, placeholder: "ex: Adam's Weclome BBQ"
  label
    ' Week Of
    br
    = f.text_field :start_date, value: Date.today + 7, class: "date_picker"
  label.slot_size
    ' How specific?
    br
    = f.select :slot_size, [ ["15 minute blocks", 15], ["30 minute blocks", 30], ["60 minute blocks", 60]]
  / label
    / ' Range
    / br
    / = f.select :days, [["7 days", 7], ["14 days", 14]]

  .form-actions
    =submit_tag("Submit", class: 'btn btn-primary')

